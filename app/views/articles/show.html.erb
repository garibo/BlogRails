<h1><%= @article.title %></h1>
<% unless @article.user.nil? %>
<p>
	Escrito por: <%= @article.user.email %>
</p>
<div class="field">
	<% @article.categories.each do |category| %>
		<%= link_to "##{category.name}", category, style:"color:#{category.color};" %>
	<% end %>
</div>
<% end %>
<div class="field">
	<%= image_tag @article.cover.url() %>
</div>
<p>
	Visitas: <%= @article.visits_count %>
</p>
<div>
	<p><%= @article.body %></p>
</div>
<div class="field">
	<h3>Comentarios</h3>
	<%= render "comments/form" %>
	<ul id="comments-box">
		<% @article.comments.each do |comment| %>
		<li>
			<%= comment.body %> - <%= comment.user.email %>
		</li>
		<% end %>
	</ul>
</div>
<div>
	<p><%= link_to "Editar", edit_article_path(@article) %></p>
</div>